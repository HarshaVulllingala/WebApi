
@{
    ViewBag.Title = "ImageValidation";
}

<h2>ImageValidation</h2>

@using (Html.BeginForm("ImageValidation", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div>
        @Html.TextBox("file", "", new { type = "file" }) <br />
        <input type="submit" value="Upload" />
        @ViewBag.Message
    </div>
}